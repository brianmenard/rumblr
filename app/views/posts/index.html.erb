<h1 class="center white">What's Rumbling</h1>

<div class='row'>
    <div class='col-md-2'></div>
    <div class='col-md-8 center white'>
        <% @posts.each do |post|%>
            <div class="post_card">
                <h2><%= post.title %></h2>
                <h4><%= post.body %></h4>
                <%= link_to post.user.username, post.user %>  ||  <%= link_to "reblog", "#" %>
                <br>
                <%= post.created_at.strftime("%I:%M %p %Z on %m-%d-%Y") %>
            </div>
        <% end %>
    </div>
    <div class='col-md-2'></div>
</div>

