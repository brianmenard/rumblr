
<span style="color:black;" class="center">
<%= form_for @post, html: { multipart: true } do |f| %>
    <%= f.label :title, class: "white" %><br>
    <%= f.text_field :title, size: "60x2" %><br><br>
    <%= f.label :body, class: "white" %><br>
    <%= f.text_area :body, size: "60x6" %><br>
    <%= f.file_field :photo, style:"padding-left:40%;" %>
    <%= f.submit %>
<% end %>
</span>