
<div class='white'>
    <h1><%= @user.username %>'s Profile<br></h1>
    <a href='#'>Follow</a><br>
    
<div class='row'>
    <div class='col-md-2'></div>
    <div class='col-md-8 center white'>
        <% @posts.each do |post|%>
            <div class="post_card">
                <h2><%= post.title %></h2>
                <h4><%= post.body %></h4>
                <%= link_to post.user.username, post.user %>
            </div>
        <% end %>
    </div>
    <div class='col-md-2'></div>
</div>
    
</div>